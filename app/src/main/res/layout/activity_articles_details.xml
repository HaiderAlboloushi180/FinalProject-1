<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFE9D1"
    android:orientation="vertical"
    tools:context=".ArticlesDetails">

    <include layout="@layout/toolbar"/>

    <TextView
        android:id="@+id/articleDetailsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/oswaldbold"
        android:padding="20dp"
        android:text="Title"
        android:textAlignment="center"
        android:textColor="#F15156"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/articleDetailsDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/oswaldregular"
        android:padding="20dp"
        android:text="DESC"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <Button
        android:id="@+id/articleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Visit Article"
        android:textSize="40sp"
        android:fontFamily="@font/oswaldregular"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:textAllCaps="false"/>

</LinearLayout>